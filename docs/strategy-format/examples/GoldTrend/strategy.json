  "version": "1.0.0",
  "description": "Breakout-based gold trend strategy with drawdown exits.",
  "language": "python",
  "runtime": {
    "name": "python",
    "version": "3.11"
  },
  "entrypoint": {
    "path": "src/strategy.py",
    "callable": "Strategy",
    "interface": "event_v1"
  },
  "parameters": [
    {
      "key": "breakoutLookback",
      "type": "integer",
      "default": 252,
      "min": 20,
      "max": 2000,
      "step": 1,
      "description": "Lookback window for previous cycle peak."
    },
    {
      "key": "dropOneDayPct",
      "type": "number",
      "default": 3.0,
      "min": 0.5,
      "max": 20,
      "step": 0.1,
      "description": "Exit if price drops this percent in one day."
    },
    {
      "key": "dropFromPeakPct",
      "type": "number",
      "default": 6.0,
      "min": 1,
      "max": 50,
      "step": 0.1,
      "description": "Exit if price drops this percent from cycle peak."
    }
  ],
  "universe": {
    "symbols": ["XAUUSD"],
    "assetClass": "commodity",
    "market": "spot",
    "currency": "USD",
    "timezone": "UTC"
  },
  "data": {
    "resolution": "1d",
    "fields": ["open", "high", "low", "close", "volume"],
    "lookback": 300
  },
  "execution": {
    "orderTypes": ["market"],
    "slippageBps": 2,
    "commissionBps": 1,
    "priceType": "close",
    "maxOrdersPerDay": 2
  },
  "risk": {
    "maxPositionPct": 100,
    "maxDrawdownPct": 25,
    "stopLossPct": 6,
    "cooldownDays": 1
